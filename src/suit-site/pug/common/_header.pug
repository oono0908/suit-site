    if page === "top"
      a(href="./index.html")
        h1.header__title
          img.header-title__img(src='/suit-site/img/common/title.svg', alt='タイトル')
    else
      a(href="../index.html")
        h1.header__title
          img.header-title__img(src='/suit-site/img/common/title.svg', alt='タイトル')
    ul.header__items.md-none
      if page === "top"
        li.header__item
          a.header__link.js-header__link(href="#about") About
